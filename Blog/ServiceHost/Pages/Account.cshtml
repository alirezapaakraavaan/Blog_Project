@page
@model ServiceHost.Pages.AccountModel
@{
    ViewData["Title"] = "ورود و ثبت نام";
}

<section id="page-title" class="page-title-parallax page-title-center text-dark" style="background-image: url(~/Theme/assets/images/parallax/page-title-parallax.jpg);">
    <div class="container">
        <div class="page-title col-md-8" data-animation="fadeInDown" data-animation-delay="300">
            <h1>ورود/ثبت نام</h1>
        </div>
        <div class="breadcrumb col-md-4" data-animation="fadeInDown" data-animation-delay="800">
            <ul>
                <li>
                    <a asp-page="./Index">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li>
                    <a asp-page="./Index">خانه</a>
                </li>
                <li class="active">
                    <a asp-page="./Account">عضویت</a>
                </li>
            </ul>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3 class="text-uppercase">ثبت نام</h3>
                <div class="m-t-30">
                    <form id="widget-contact-form" role="form" method="post">
                        <div class="row">
                            <div class="form-group col-sm-6">
                                <label for="name">نام کامل</label>
                                <input type="text" aria-required="true" name="fullname" class="form-control
                                       required name" placeholder="نام و نام خانوادگی خود را وارد کنید">
                            </div>
                            <div class="form-group col-sm-6">
                                <label for="mobile">موبایل</label>
                                <input type="text" aria-required="true" name="mobile" class="form-control
                                       required email" placeholder="شماره تماس خود را وارد کنید">
                            </div>
                            <div class="form-group col-sm-12">
                                <label for="name">نام کاربری</label>
                                <input type="text" aria-required="true" name="username" class="form-control
                                       required name" placeholder="نام کاربری خود را وارد کنید">
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-6">
                                <label for="subject">رمز عبور</label>
                                <input type="password" name="password" class="form-control required"
                                       placeholder="رمز عبور را وارد کنید">
                            </div>
                            <div class="form-group col-sm-6">
                                <label for="subject">تکرار رمز عبور</label>
                                <input type="password" name="repassword" class="form-control required"
                                       placeholder="تکرار رمز عبور را وارد کنید">
                            </div>
                        </div>
                        <input type="text" class="hidden" id="widget-contact-form-antispam" name="widget-contact-form-antispam" value="" />
                        <button class="btn btn-primary" type="submit" id="form-submit">ثبت نام</button>
                    </form>
                    <script type="text/javascript">
                        jQuery("#widget-contact-form").validate({
                            submitHandler: function (form) {

                                jQuery(form).ajaxSubmit({
                                    success: function (text) {
                                        if (text.response == 'success') {
                                            $.notify({
                                                message: "We have <strong>successfully</strong> received your Message and will get Back to you as soon as possible."
                                            },
                                                {
                                                    type: 'success'
                                                });
                                            $(form)[0].reset();

                                        } else {
                                            $.notify({
                                                message: text.message
                                            },
                                                {
                                                    type: 'danger'
                                                });
                                        }
                                    }
                                });
                            }
                        });

                    </script>
                </div>
            </div>

            <div class="col-md-6" style="right: 200px;">
                <h3 class="text-uppercase">ورود</h3>
                <div class="m-t-30">
                    @if (Model.Message != null)
                    {
                        <div class="alert alert-danger">@Model.Message</div>
                    }
                    <form id="widget-contact-form" role="form" method="post" asp-page-handler="Login">
                        <div class="row">
                            <div class="form-group col-sm-6">
                                <label for="name">نام کاربری</label>
                                <input type="text" aria-required="true" name="username" class="form-control
                                       required name" placeholder="نام کاربری خود را وارد کنید">
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-6">
                                <label for="subject">رمز عبور</label>
                                <input type="password" name="password" class="form-control required"
                                       placeholder="رمز عبور را وارد کنید">
                            </div>
                        </div>
                        <input type="text" class="hidden" id="widget-contact-form-antispam" name="widget-contact-form-antispam" value="" />
                        <button class="btn btn-primary" type="submit" id="form-submit">ورود</button>
                    </form>
                    <script type="text/javascript">
                        jQuery("#widget-contact-form").validate({
                            submitHandler: function (form) {

                                jQuery(form).ajaxSubmit({
                                    success: function (text) {
                                        if (text.response == 'success') {
                                            $.notify({
                                                message: "We have <strong>successfully</strong> received your Message and will get Back to you as soon as possible."
                                            },
                                                {
                                                    type: 'success'
                                                });
                                            $(form)[0].reset();

                                        } else {
                                            $.notify({
                                                message: text.message
                                            },
                                                {
                                                    type: 'danger'
                                                });
                                        }
                                    }
                                });
                            }
                        });

                    </script>
                </div>
            </div>
        </div>
    </div>
</section>