                                        <a href="#">
                                            <i class="fa fa-rss"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <a class="gototop gototop-button" href="#">
        <i class="fa fa-chevron-up"></i>
    </a>
    <script src="~/Theme/assets/js/theme-functions.js"></script>
    <script src="~/Theme/assets/js/custom.js"></script>
</body>
</html>